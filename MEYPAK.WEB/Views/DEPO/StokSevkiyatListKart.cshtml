@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.DEPO
<div class="menu-container dx-swatch-additional">



    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoSTOKMALKABULLIST>()
            .ID("gridContainer")
            .ShowBorders(true)

            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("Stok Sevkiyat Kart")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {
                    groupItems.AddSimpleFor(m => m.depoid);
                    groupItems.AddSimpleFor(m => m.stokid);
                    groupItems.AddSimpleFor(m => m.emirid);
                });
            }))
            )
            .Columns(columns =>
            {
                columns.AddFor(m => m.depoid)
                .Visible(true)
                .Lookup(lookup => lookup
                .DataSource(ds => ds.Mvc().Controller("DEPO").LoadAction("DepoGet").Key("id"))
                .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("depoadi")))
                .ValueExpr("id")
                .DisplayExpr("depoadi")
                );

                columns.AddFor(m => m.stokid)
                .Visible(true)
                .Lookup(lookup => lookup
                .DataSource(ds => ds.Mvc().Controller("STOK").LoadAction("StokGet").Key("id"))
                .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("adi")))
                .ValueExpr("id")
                .DisplayExpr("adi")
                );

                columns.AddFor(m => m.emirid)
                .Visible(true)
                .Lookup(lookup => lookup
                .DataSource(ds => ds.Mvc().Controller("Depo").LoadAction("DepoEmirGet").Key("id"))
                .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("aciklama")))
                .ValueExpr("id")
                .DisplayExpr("aciklama")
                );

                columns.Add()
                .Type(GridCommandColumnType.Buttons)
                .Buttons(b =>
                {
                    b.Add().Name(GridColumnButtonName.Edit).Text("Düzenle");
                    b.Add().Name(GridColumnButtonName.Delete).Text("Sil");
                });
            }).OnRowInserted("Efe")
            .DataSource(d => d.Mvc()
            .Controller("DEPO")
            .LoadAction("StokSevkiyatListGet").InsertAction("StokSevkiyatListPost").UpdateAction("StokSevkiyatListPut").DeleteAction("StokSevkiyatListDelete").Key("id")

            )
            )



    </div>
    <script>
        function Efe() {
            window.location.replace("http://localhost:5232/Stok/StokSayimHarKart");
        }
    </script>

    @(Html.DevExtreme().SelectBox()
        .ID("apptheme")
        .ValueExpr("theme")
        .DisplayExpr("name")
        .DataSource(new object[] {
    new { name = "Gündüz", theme = "dx.light.css"},
    new { name = "Gece", theme = "dx.dark.css"},

        })
        .OnSelectionChanged("changeTheme")
        )
    <script>
        function changeTheme(e) {
            var selectedTheme = e.component.option("value");
            document.cookie = "currentTheme=" + selectedTheme + ";path=/";
            window.location.reload();
        }
    </script>
</div>