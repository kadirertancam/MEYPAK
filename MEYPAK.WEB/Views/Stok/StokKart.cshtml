@using MEYPAK.Entity.Models;
@model List<MPSTOK>

@{
    var aa = Model[0];

} 
<div class="col-lg-2">
    <div class="card">

        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Stok Ekle</h3>
                    </div>
                    <hr>
                    <form action="" method="post" novalidate="novalidate">
                        @foreach (var item2 in aa.GetType().GetProperties())
                        {
                            string typename = item2.PropertyType.Name;
                            
                            if (typename == "Int32" || typename == "Decimal" || typename == "Byte")
                            {
                                <label class="control-label mb-1">@item2.Name :</label>
                                <input type="number" asp-for="@item2.Name" class="form-control" />
                            }
                            else if (typename == "String")
                            {
                                <label class="control-label mb-1">@item2.Name :</label>
                                <input type="text" asp-for="@item2.Name" class="form-control" />
                            }
                            else if (typename == "DateTime")
                            {
                                <label class="control-label mb-1">@item2.Name :</label>
                                <input type="text" asp-for="@item2.Name" class="form-control" />
                            }

                        }
                        
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                         
                                <span id="payment-button-amount">Kaydet</span>
                                @*<span id="payment-button-sending" style="display:none;">Sending…</span>*@
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- .card -->





<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Stok Listesi</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    @foreach (var item2 in aa.GetType().GetProperties())
                                    {


                                        <th>@item2.Name + " " + @item2.PropertyType.Name</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (MPSTOK item in Model)
                                {
                                    <tr>
                                        @foreach (var item2 in item.GetType().GetProperties())
                                        {

                                            <td>@item.GetType().GetProperty(item2.Name).GetValue(item)</td>

                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







