@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.STOK
<div class="menu-container dx-swatch-additional">



    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoSTOKHAR>()
            .ID("gridContainer")
            .ShowBorders(true)

            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("Stok Kart")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {


                    groupItems.AddSimpleFor(m => m.belgE_NO);
                    groupItems.AddSimpleFor(m => m.aciklama);
                    groupItems.AddSimpleFor(m => m.miktar);
                    groupItems.AddSimpleFor(m => m.netfiyat);
                    groupItems.AddSimpleFor(m => m.birim);
                    groupItems.AddSimpleFor(m => m.kdv);


                    
                });


            }))
            )
            .Columns(columns =>
            {

                columns.AddFor(m => m.belgE_NO)
                .Width(120);

                columns.AddFor(m => m.aciklama);

                columns.AddFor(m => m.miktar);

                columns.AddFor(m => m.netfiyat);

                columns.AddFor(m => m.birim);
              

                columns.AddFor(m => m.kdv);

            columns.AddFor(m => m.s)
            .Width(125)
            .Lookup(lookup => lookup
            .DataSource(d => d.Mvc().Controller("DataGridStatesLookup").LoadAction("Get").Key("ID"))
            .DisplayExpr("Name")
            .ValueExpr("ID")
           

            })
            .DataSource(d => d.Mvc()
            .Controller("STOK")
            .LoadAction("StokHarGet").InsertAction("StokHarPost").UpdateAction("StokHarPut").DeleteAction("StokHarDelete").Key("id")

            )
            )



    </div>


    @(Html.DevExtreme().SelectBox()
        .ID("apptheme")
        .ValueExpr("theme")
        .DisplayExpr("name")
        .DataSource(new object[] {
    new { name = "Light", theme = "dx.light.css"},
    new { name = "Dark", theme = "dx.dark.css"},

        })
        .OnSelectionChanged("changeTheme")
        )
    <script>
        function changeTheme(e) {
            var selectedTheme = e.component.option("value");
            document.cookie = "currentTheme=" + selectedTheme + ";path=/";
            window.location.reload();
        }
    </script>
</div>