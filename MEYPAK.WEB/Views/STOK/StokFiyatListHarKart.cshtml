@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.STOK
<div class="menu-container dx-swatch-additional">

    <h2> Stok Fiyat Raporu </h2>

    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoSTOKFIYATHAR>()
            .ID("gridContainer")
            .ShowBorders(true)

            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("Stok Fiyat Hareket Raporu")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {
                    groupItems.AddSimpleFor(m => m.olusturmatarihi);
                    groupItems.AddSimpleFor(m => m.stokfiyatid);
                    groupItems.AddSimpleFor(m => m.fiyat)
                   

                .ColSpan(2)
                .Editor(editor => editor.TextArea().Height(100));
                });



            }))
            )
            .Columns(columns =>
            {

                columns.AddFor(m => m.olusturmatarihi)
                .Width(120);
                columns.AddFor(m => m.stokfiyatid)

                .Width(150)
                .Visible(true)
                .Lookup(lookup => lookup
                .DataSource(ds => ds.Mvc().Controller("STOK").LoadAction("StokFiyatHarGet").Key("id"))
                .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("acıklama")))
                .ValueExpr("id")
                .DisplayExpr("acıklama"));




                columns.Add()
                .Type(GridCommandColumnType.Buttons)
                .Buttons(b =>
                {
                    b.Add().Name(GridColumnButtonName.Edit).Text("Düzenle");
                    b.Add().Name(GridColumnButtonName.Delete).Text("Sil");
                });

            })
            .DataSource(d => d.Mvc()
            .Controller("STOK")
            .LoadAction("StokFiyatHarGet").InsertAction("StokFiyatHarPost").UpdateAction("StokFiyatHarPut").DeleteAction("StokFiyatHarDelete").Key("id")

            )
            )



    </div>


    @(Html.DevExtreme().SelectBox()
        .ID("apptheme")
        .ValueExpr("theme")
        .DisplayExpr("name")
        .DataSource(new object[] {
    new { name = "Gündüz", theme = "dx.light.css"},
    new { name = "Gece", theme = "dx.dark.css"},

        })
        .OnSelectionChanged("changeTheme")
        )
    <script>
        function changeTheme(e) {
            var selectedTheme = e.component.option("value");
            document.cookie = "currentTheme=" + selectedTheme + ";path=/";
            window.location.reload();
        }
    </script>
</div>