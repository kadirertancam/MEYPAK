
@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.STOK
<div class="menu-container dx-swatch-additional">



    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoSTOK>()
            .ID("gridContainer")
            .ShowBorders(true)
            .Scrolling(x => x.RowRenderingMode(GridRowRenderingMode.Standard)).Paging(x => x.PageSize(25)).Pager(x =>
            {
                x.Visible(true);
                x.DisplayMode(GridPagerDisplayMode.Full);
                x.ShowPageSizeSelector(true);
                x.AllowedPageSizes(new JS("[5,10,'all']"));
                x.ShowInfo(true);
                x.ShowNavigationButtons(true);


            })
            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("ID")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {

                    groupItems.AddSimpleFor(m => m.adi);
                    groupItems.AddSimpleFor(m => m.kategoriid);
                    groupItems.AddSimpleFor(m => m.sfiyaT1);
                    groupItems.AddSimpleFor(m => m.sfiyaT2);
                    groupItems.AddSimpleFor(m => m.donem);

                    groupItems.AddSimpleFor(m => m.aciklama);
                    groupItems.AddSimpleFor(m => m.aciklamA5)
                .ColSpan(2)
                .Editor(editor => editor.TextArea().Height(100));
                });

                items.AddGroup()
                .Caption("ACIKLAMA2")
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {
                    groupItems.AddSimpleFor(m => m.aciklama);
                    groupItems.AddSimpleFor(m => m.aciklamA5);

                });
            }))
            )
            .Columns(columns =>
            {

                columns.AddFor(m => m.adi)
                .Width(120);

                columns.AddFor(m => m.kategoriid);

                columns.AddFor(m => m.sfiyaT1);

                columns.AddFor(m => m.sfiyaT2);

                columns.AddFor(m => m.donem)
                .Width(65);

                columns.AddFor(m => m.aciklama);

                columns.AddFor(m => m.aciklamA5)
                .Visible(false);

            })
            .DataSource(d => d.Mvc()
            .Controller("STOK")
            .LoadAction("StokGet").UpdateAction("StokEkle").DeleteAction("StokEkle").InsertAction("StokEkle").Key("id")

            )
            )
