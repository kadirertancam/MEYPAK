@{
    Layout = "_DevExtremeLayout";
}

@using MEYPAK.Entity.PocoModels.STOK
@(
Html.DevExtreme().DataGrid<PocoSTOK>()
    .DataSource(d =>
     d.Mvc()
     .Controller("STOK")
     .LoadAction("Get").Key("id")
    )
    .RemoteOperations(true)
    .Scrolling(s =>
    {
        s.Mode(GridScrollingMode.Infinite);
    }
    )
    .Paging(p => p.PageSize(100))
    .ShowBorders(true)
    .LoadPanel(loadPanel => loadPanel.Enabled(true))
    .RemoteOperations(true).CacheEnabled(true)
    .Columns(columns =>
    {
        columns.AddFor(m => m.id)
            .Width(75);

        columns.AddFor(m => m.adi)
            .Width(150);

        columns.AddFor(m => m.donem)
            .Width(120);

        columns.AddFor(m => m.aciklama);



    })
)
