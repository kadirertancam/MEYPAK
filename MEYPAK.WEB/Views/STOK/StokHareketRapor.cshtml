@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.STOK
<div class="menu-container dx-swatch-additional">

    <h2> Stok Hareket Raporu </h2>

    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoSTOKHAR>()
            .ID("gridContainer")
            .ShowBorders(true)

            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("Stok Hareket Raporu")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {

                    groupItems.AddSimpleFor(m => m.belgE_NO)
                .ColSpan(2)
                .Editor(editor => editor.TextArea().Height(100));
                });



            }))
            )
            .Columns(columns =>
            {

                columns.AddFor(m => m.id)
                .Width(120);
                columns.AddFor(m => m.olusturmatarihi);
                columns.AddFor(m => m.belgE_NO)
                .Width(150)
                .Visible(true)
                .Lookup(lookup => lookup
                .DataSource(ds => ds.Mvc().Controller("STOK").LoadAction("StokHarGet").Key("id"))
                .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("belgE_NO")))
                .ValueExpr("id")
                .DisplayExpr("belgE_NO"));



                columns.AddFor(m => m.hareketturu); 

                columns.AddFor(m => m.stokid);

                columns.AddFor(m => m.kunye)
                .Width(65);

                columns.AddFor(m => m.depoid);
                columns.AddFor(m => m.miktar);

                columns.AddFor(m => m.bruttoplam);
                columns.AddFor(m => m.kdv);
                columns.AddFor(m => m.netfiyat);
                columns.AddFor(m => m.nettoplam);

                columns.Add()
                .Type(GridCommandColumnType.Buttons)
                .Buttons(b =>
                {
                    b.Add().Name(GridColumnButtonName.Edit).Text("Düzenle");
                    b.Add().Name(GridColumnButtonName.Delete).Text("Sil");
                });

            })
            .DataSource(d => d.Mvc()
            .Controller("STOK")
            .LoadAction("StokHarGet").InsertAction("StokHarPost").UpdateAction("StokHarPut").DeleteAction("StokHarDelete").Key("id")

            )
            )



    </div>


    @(Html.DevExtreme().SelectBox()
        .ID("apptheme")
        .ValueExpr("theme")
        .DisplayExpr("name")
        .DataSource(new object[] {
    new { name = "Gündüz", theme = "dx.light.css"},
    new { name = "Gece", theme = "dx.dark.css"},

        })
        .OnSelectionChanged("changeTheme")
        )
    <script>
        function changeTheme(e) {
            var selectedTheme = e.component.option("value");
            document.cookie = "currentTheme=" + selectedTheme + ";path=/";
            window.location.reload();
        }
    </script>
</div>