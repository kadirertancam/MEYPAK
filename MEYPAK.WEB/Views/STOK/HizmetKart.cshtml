@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.STOK
<div class="menu-container dx-swatch-additional">



    <div id="data-grid-demo">
        @(
            Html.DevExtreme().DataGrid<PocoHIZMET>()
            .ID("gridContainer")
            .ShowBorders(true)

            .Paging(p => p.Enabled(true))
            .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .AllowAdding(true)
            .AllowDeleting(true)
            .Popup(p => p
            .Title("Stok Kart")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                .ColCount(2)
                .ColSpan(2)
                .Items(groupItems =>
                {


                    groupItems.AddSimpleFor(m => m.adi);
                    groupItems.AddSimpleFor(m => m.kod);
                    groupItems.AddSimpleFor(m => m.kategoriid);
                    groupItems.AddSimpleFor(m => m.grupkodu);
                    groupItems.AddSimpleFor(m => m.donem);

                    groupItems.AddSimpleFor(m => m.aciklama);
                    groupItems.AddSimpleFor(m => m.aciklamA5)
                .ColSpan(2)
                .Editor(editor => editor.TextArea().Height(100));
                });


            }))
            )
            .Columns(columns =>
            {

                columns.AddFor(m => m.adi)
                .Width(120);

                columns.AddFor(m => m.kod);

                columns.AddFor(m => m.kategoriid);

                columns.AddFor(m => m.grupkodu);

                columns.AddFor(m => m.donem)
                .Width(65);

                columns.AddFor(m => m.aciklama);

                columns.AddFor(m => m.aciklamA5);
                
                  columns.Add()
                .Type(GridCommandColumnType.Buttons)
                .Buttons(b =>
                {
                    b.Add().Name(GridColumnButtonName.Edit).Text("Düzenle");
                    b.Add().Name(GridColumnButtonName.Delete).Text("Sil");
                });
            })
            .DataSource(d => d.Mvc()
            .Controller("STOK")
            .LoadAction("HizmetGet").InsertAction("HizmetPost").UpdateAction("HizmetPut").DeleteAction("HizmetDelete").Key("id")

            )
            )



    </div>


    @(Html.DevExtreme().SelectBox()
        .ID("apptheme")
        .ValueExpr("theme")
        .DisplayExpr("name")
        .DataSource(new object[] {
    new { name = "Gündüz", theme = "dx.light.css"},
    new { name = "Gece", theme = "dx.dark.css"},

        })
        .OnSelectionChanged("changeTheme")
        )
    <script>
        function changeTheme(e) {
            var selectedTheme = e.component.option("value");
            document.cookie = "currentTheme=" + selectedTheme + ";path=/";
            window.location.reload();
        }
    </script>
</div>