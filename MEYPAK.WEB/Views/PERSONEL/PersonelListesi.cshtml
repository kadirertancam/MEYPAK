@using DevExtreme.AspNet.Mvc
@using MEYPAK.Entity.PocoModels.PERSONEL
<main role="main" class="container" style="margin-left:250px; margin-top :55px">
    <div class="menu-container dx-swatch-additional" style="width:fit-content">

        <h4>Personel Listesi</h4>

        <div id="data-grid-demo">
            @(
                Html.DevExtreme().DataGrid<PocoPERSONEL>()
                .ID("gridContainer")
                .FilterPanel(f => f.Visible(false))
                .HeaderFilter(h => h.Visible(true)).ColumnAutoWidth(true).Pager(x =>
                {
                    x.ShowPageSizeSelector(true);
                    x.ShowPageSizeSelector(true);
                })
                .Paging(p => p.Enabled(true))
                .Scrolling(scrolling =>
                {
                    scrolling.ColumnRenderingMode(GridColumnRenderingMode.Standard);
                    scrolling.ShowScrollbar(ShowScrollbarMode.Always);
                    scrolling.Mode(GridScrollingMode.Standard);
                    scrolling.ScrollByContent(true);
                })

                .Columns(columns =>
                {
                    columns.AddFor(m => m.olusturmatarihi).Caption("KAYIT TARİHİ").Width(100);
                    columns.AddFor(m => m.tc).Caption("TC")
                    .Width(160);
                    columns.AddFor(m => m.isbastar).Caption("İŞ GİRİŞ TAR.");
                    columns.AddFor(m => m.isbittar).Caption("İŞ ÇIKIŞ TAR.");
                    columns.AddFor(m => m.adi).Caption("ADI").Width(200);
                    columns.AddFor(m => m.soyadi).Caption("SOYADI");
                    columns.AddFor(m => m.cepno).Caption("TELEFON");
                    columns.AddFor(m => m.sube).Caption("ŞUBE");
                    @* columns.AddFor(m => m.personeldepartmanid)
            .Width(160)
            .Visible(true)
            .Lookup(lookup => lookup
            .DataSource(ds => ds.Mvc().Controller("PERSONEL").LoadAction("StokHarGet").Key("hareketturu"))
            .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("aciklama")))
            .ValueExpr("hareketturu")
            .DisplayExpr("aciklama")).Caption("HAREKET TÜRÜ");*@
                    columns.AddFor(m => m.dogumtar).Caption("DOĞUM TARİHİ");
                    columns.AddFor(m => m.dogumyeri).Caption("DOĞUM YERİ");
                    columns.AddFor(m => m.babaadi).Caption("BABA ADI");
                    columns.AddFor(m => m.anneadi).Caption("ANNE ADI");
                    columns.AddFor(m => m.adres).Caption("ADRES");
                    columns.AddFor(m => m.medenidurum).Caption("MEDENİ DURUM");
                    columns.AddFor(m => m.cinsiyet).Caption("CİNSİYET");
                    columns.AddFor(m => m.vergidairesi).Caption("VERGİ DAİRESİ");
                    columns.AddFor(m => m.vergino).Caption("VERGİ NO");

                    columns.AddFor(m => m.guncellemetarihi).Caption("GÜNCELLEME TARİHİ").Width(120);

                })
                .DataSource(d => d.Mvc()
                .Controller("PERSONEL")
                .LoadAction("PersonelGet").Key("id")

                )
                )

        </div>
        <script>
            function changeTheme(e) {
                var selectedTheme = e.component.option("value");
                document.cookie = "currentTheme=" + selectedTheme + ";path=/";
                window.location.reload();
            }
        </script>

    </div>
</main>